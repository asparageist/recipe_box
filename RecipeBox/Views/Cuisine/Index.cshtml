@{
  Layout = "_Layout";
}

@using RecipeBox.Models

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added.</h3>
}

<ul>
  @foreach (Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.CuisineName}", "Details", new { id = cuisine.CuisineID })</li>
  }
</ul>

<p>@Html.ActionLink("Add a new cuisine", "New")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>