@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h4>Add a new recipe</h4>


@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.RecipeName)
  @Html.TextBoxFor(model => model.RecipeName)
  @Html.ValidationMessageFor(model => model.RecipeName)
  <input type="submit" value="Add new recipe" class="btn btn-primary" />

}
<p>@Html.ActionLink("Show all recipes", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
